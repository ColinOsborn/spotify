<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">
        <img class="img" alt="Brand" src="http://vignette1.wikia.nocookie.net/logopedia/images/f/f8/Spotify2015.png/revision/latest?cb=20150401181504">
      </a>
      <div class="nav navbar-form">
            <%= form_tag(search_path, :method => "GET") do %>
            <div class="col-xs-8 col-md-2">
              <%= text_field_tag :search, params[:search], placeholder: "Search Artists", class: "form-control text-center" %>
            </div>
            <div class="col-xs-4">
              <%= submit_tag "Search", class:"btn btn-default" %>
            </div>
            <% end %>
          </div>
        <div class="pull-right align-right">
          <% if current_user %>
            <h5>Hello, <%= current_user.uid %>! - <%= link_to "Logout", logout_path, method: :delete %></h5>
          <% else %>
            <%= link_to "Sign in with Spotify", spotify_login_path %>
          <% end %>
      </div>
    </div>
  </div>
</nav>
